	journal = {BMC Genomics},
	author = {Tortereau, Flavie and Servin, Bertrand and Frantz, Laurent and Megens, Hendrik-Jan and Milan, Denis and Rohrer, Gary and Wiedmann, Ralph and Beever, Jonathan and Archibald, Alan L. and Schook, Lawrence and Groenen, Martien},
