@article{crepieux_quantitative_2004,
	title = {Quantitative {Trait} {Loci} ({QTL}) {Detection} in {Multicross} {Inbred} {Designs}: {Recovering} {QTL} {Identical}-by-{Descent} {Status} {Information} {From} {Marker} {Data}},
